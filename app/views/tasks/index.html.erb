<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Mis Tareas</h1>
    <%= link_to 'Nueva Tarea', new_task_path, class: 'btn btn-primary' %>
  </div>

  <% if @tasks.any? %>
    <div class="row">
      <% @tasks.each do |task| %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= task.title %></h5>
              <p class="card-text"><%= task.description %></p>
              <p class="card-text">
                <small class="text-muted">
                  Vence: <%= task.due_date.strftime("%d/%m/%Y %H:%M") %>
                </small>
              </p>
              <span class="badge bg-<%= task.status == 'completed' ? 'success' : 'warning' %>">
                <%= task.status %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h3 class="text-muted">No hay tareas</h3>
      <p class="text-muted">Â¡Crea tu primera tarea!</p>
      <%= link_to 'Crear Tarea', new_task_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>