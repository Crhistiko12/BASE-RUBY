<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title mb-0">Editar Tarea</h2>
      </div>
      <div class="card-body">
        <%= form_with model: @task, local: true, html: { class: 'needs-validation', novalidate: true } do |form| %>
          <% if @task.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@task.errors.count, "error") %> impiden guardar esta tarea:</h4>
              <ul>
                <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, "Título", class: "form-label" %>
            <%= form.text_field :title, 
                class: "form-control #{'is-invalid' if @task.errors[:title].any?}", 
                required: true,
                placeholder: "Ej: Comprar víveres" %>
            <% if @task.errors[:title].any? %>
              <div class="invalid-feedback d-block">
                <%= @task.errors[:title].first %>
              </div>
            <% end %>
          </div>

          <div class="mb-3">
            <%= form.label :description, "Descripción", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4 %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :due_date, "Fecha de Vencimiento", class: "form-label" %>
                <%= form.datetime_local_field :due_date, 
                    class: "form-control #{'is-invalid' if @task.errors[:due_date].any?}", 
                    required: true,
                    min: Time.current.strftime('%Y-%m-%dT%H:%M') %>
                <% if @task.errors[:due_date].any? %>
                  <div class="invalid-feedback d-block">
                    <%= @task.errors[:due_date].first %>
                  </div>
                <% else %>
                  <small class="form-text text-muted">Fecha y hora de vencimiento</small>
                <% end %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="mb-3">
                <%= form.label :priority, "Prioridad", class: "form-label" %>
                <%= form.select :priority, 
                    [
                      ['Alta', 'alta'], 
                      ['Media', 'media'], 
                      ['Baja', 'baja']
                    ], 
                    { selected: @task.priority || 'media' }, 
                    { 
                      class: "form-select #{'is-invalid' if @task.errors[:priority].any?}",
                      required: true 
                    } %>
                <% if @task.errors[:priority].any? %>
                  <div class="invalid-feedback d-block">
                    <%= @task.errors[:priority].first %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="mb-3">
                <%= form.label :status, "Estado", class: "form-label" %>
                <%= form.select :status, 
                    [
                      ['Pendiente', 'pendiente'], 
                      ['En progreso', 'en_progreso'], 
                      ['Completado', 'completado']
                    ], 
                    { selected: @task.status || 'pendiente' }, 
                    { 
                      class: "form-select #{'is-invalid' if @task.errors[:status].any?}",
                      required: true 
                    } %>
                <% if @task.errors[:status].any? %>
                  <div class="invalid-feedback d-block">
                    <%= @task.errors[:status].first %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to 'Cancelar', tasks_path, class: 'btn btn-secondary' %>
            <%= form.submit "Actualizar Tarea", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>